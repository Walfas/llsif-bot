---
general:
  images_path: img
  output_path: output/output.jpg
  used_words_path: output/used_words.txt
  phrases_path: phrases.txt
  profile_lookback_hours: 4

wordnik:
  max_attempts: 5
  url: http://api.wordnik.com/v4/words.json/randomWords
  params:
    api_key: your_api_key_here
    minCorpusCount: 50
    hasDictionaryDef: false
    includePartOfSpeech: adjective

imagemagick:
  width: 426
  height: 600
  stroke_color: '484848'
  font: font/your_font_here.ttf   # I use 'Roboto-BoldCondensed.ttf'

twitter:
  api:
    consumer_key:        put
    consumer_secret:     your
    access_token:        keys
    access_token_secret: here

tumblr:
  host: your-url-here.tumblr.com
  tags: 'llsif,love live'
  api:
    consumer_key:       put
    consumer_secret:    your
    oauth_token:        keys
    oauth_token_secret: here

